<UserControl x:Class="SWEN2_TourPlannerGroupProject.Views.UserControls.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWEN2_TourPlannerGroupProject.Views.UserControls"
             mc:Ignorable="d" 

             xmlns:subviews="clr-namespace:SWEN2_TourPlannerGroupProject.Views.Subviews"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="File" FontSize="16">
                <MenuItem Header="Exit"></MenuItem>
            </MenuItem>
            <MenuItem Header="Edit" FontSize="16"></MenuItem>
            <MenuItem Header="About" FontSize="16"></MenuItem>
        </Menu>

        <TabControl Grid.Column="0" Grid.Row="1">
            <TabItem Header="Tab1">
                <subviews:Tab1></subviews:Tab1>
            </TabItem>
            <TabItem Header="Tab2">
                <subviews:Tab2></subviews:Tab2>
            </TabItem>
        </TabControl>

    </Grid>
</UserControl>
