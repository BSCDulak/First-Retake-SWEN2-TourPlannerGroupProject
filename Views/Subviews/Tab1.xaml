<UserControl x:Class="SWEN2_TourPlannerGroupProject.Views.Subviews.Tab1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWEN2_TourPlannerGroupProject.Views.Subviews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="4*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
        </Grid.RowDefinitions>
        <WrapPanel Grid.ColumnSpan="2">
            <Button FontSize="21"> Add </Button>
            <Button FontSize="21">Remove</Button>
            <Button FontSize="21">Remove All</Button>
            <TextBox Width="200"> Tour Name to add tour here</TextBox>
        </WrapPanel>
        <Button Grid.Row="1">List of Tours goes here</Button>
        <Button Grid.Column="1" Grid.Row="1">Details of Tours goes here</Button>
    </Grid>
</UserControl>
