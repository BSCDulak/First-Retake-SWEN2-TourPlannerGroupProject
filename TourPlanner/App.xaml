<Application x:Class="SWEN2_TourPlannerGroupProject.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SWEN2_TourPlannerGroupProject"
             StartupUri="/Views/MainWindow.xaml">
    <Application.Resources>
        <!-- Styles for the buttons in the application, instead of doing styles individually per file, we do it collectively here -->
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="FontSize" Value="25"></Setter>
        </Style>
         
    </Application.Resources>
</Application>
