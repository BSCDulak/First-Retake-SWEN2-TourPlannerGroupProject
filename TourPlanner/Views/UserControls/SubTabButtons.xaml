<UserControl x:Class="SWEN2_TourPlannerGroupProject.Views.UserControls.SubTabButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWEN2_TourPlannerGroupProject.Views.UserControls"
             xmlns:viewModels="clr-namespace:SWEN2_TourPlannerGroupProject.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewModels:SubTabButtonsViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
        <WrapPanel>
            <Button Content="Add" Command="{Binding AddCommand}" CommandParameter="{Binding NewAddText}"></Button>
            <Button Content="Remove" Command="{Binding DeleteCommand}"></Button>
        </WrapPanel>
            <TextBox x:Name="AddTextBox"
                     Width="150" Height="25" Margin="5"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Text="{Binding NewAddText, UpdateSourceTrigger=PropertyChanged}" 
                     >
            </TextBox>
        </StackPanel>
    </Grid>
</UserControl>
