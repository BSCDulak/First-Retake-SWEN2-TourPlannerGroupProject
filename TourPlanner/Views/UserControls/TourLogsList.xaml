<UserControl x:Class="SWEN2_TourPlannerGroupProject.Views.UserControls.TourLogs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWEN2_TourPlannerGroupProject.Views.UserControls"
             xmlns:viewModels="clr-namespace:SWEN2_TourPlannerGroupProject.ViewModels"
             xmlns:helpers="clr-namespace:SWEN2_TourPlannerGroupProject.Helpers"
             d:DataContext="{d:DesignInstance Type=viewModels:TourLogsViewModel, IsDesignTimeCreatable=False}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="154*" />
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="159*"/>
            <ColumnDefinition Width="480*" />
        </Grid.ColumnDefinitions>

        <!-- Tour Logs List -->
        <ListView Grid.Column="0"
                  ItemsSource="{Binding TourLogs}" 
                  SelectedItem="{Binding SelectedTourLog}" 
                  helpers:SelectedItemsBehavior.SelectedItems="{Binding SelectedTourLogs}" 
                  SelectionMode="Extended"
                  DisplayMemberPath="Name"
                  Margin="0,0,10,10" Grid.ColumnSpan="3" />

        <!-- Tour Log Details Editor -->
        <local:TourLogsDetails Grid.Column="3" Margin="-10,-5,10,10" Loaded="TourLogsDetails_Loaded"/>
    </Grid>
</UserControl>
