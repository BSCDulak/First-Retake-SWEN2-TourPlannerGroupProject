<UserControl x:Class="SWEN2_TourPlannerGroupProject.Views.UserControls.TourDetailsWrapPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWEN2_TourPlannerGroupProject.Views.UserControls"
             xmlns:viewModels="clr-namespace:SWEN2_TourPlannerGroupProject.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewModels:TourDetailsWrapPanelViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" MinWidth="350">
        <Grid Margin="10" MinHeight="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" MinWidth="200"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Label Content="Name:" Grid.Row="0" Grid.Column="0" Margin="5"/>
            <TextBox Text="{Binding SelectedTour.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="1" Margin="5"/>

            <Label Content="Description:" Grid.Row="1" Grid.Column="0" Margin="5"/>
            <TextBox Text="{Binding SelectedTour.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1" Margin="5"/>

            <Label Content="Start Location:" Grid.Row="2" Grid.Column="0" Margin="5"/>
            <TextBox Text="{Binding SelectedTour.StartLocation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.Column="1" Margin="5"/>

            <Label Content="End Location:" Grid.Row="3" Grid.Column="0" Margin="5"/>
            <TextBox Text="{Binding SelectedTour.EndLocation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="1" Margin="5"/>

            <Label Content="Transport Type:" Grid.Row="4" Grid.Column="0" Margin="5"/>
            <TextBox Text="{Binding SelectedTour.TransportType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="4" Grid.Column="1" Margin="5"/>

            <Label Content="Distance:" Grid.Row="5" Grid.Column="0" Margin="5"/>
            <TextBox Text="{Binding SelectedTour.Distance, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="5" Grid.Column="1" Margin="5"/>

            <Label Content="Estimated Time:" Grid.Row="6" Grid.Column="0" Margin="5"/>
            <TextBox Text="{Binding SelectedTour.EstimatedTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="6" Grid.Column="1" Margin="5"/>

            <Label Content="Route Information:" Grid.Row="7" Grid.Column="0" Margin="5"/>
            <TextBox Text="{Binding SelectedTour.RouteInformation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="7" Grid.Column="1" Margin="5"/>
        </Grid>
    </ScrollViewer>
</UserControl>
