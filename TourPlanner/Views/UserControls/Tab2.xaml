<UserControl x:Class="SWEN2_TourPlannerGroupProject.Views.Subviews.Tab2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWEN2_TourPlannerGroupProject.Views.Subviews"
             xmlns:userControls="clr-namespace:SWEN2_TourPlannerGroupProject.Views.UserControls"
             xmlns:viewModels="clr-namespace:SWEN2_TourPlannerGroupProject.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            
            <ColumnDefinition Width="4*"/>
           
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

      
        <userControls:SubTabButtons DataContext="{Binding SubTabButtonsViewModel}" Grid.ColumnSpan="2"/>

        
        <userControls:ToursList DataContext="{Binding ToursListViewModel}" Grid.Row="1"/>

        
        <Border Grid.Column="1" Grid.Row="1"
            Margin="10"
            Background="#F9F9F9"
            BorderBrush="#D3D3D3"
            BorderThickness="1"
            Padding="15">

            <StackPanel>
                <TextBlock Text="Tour Details" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Date/Time:" FontWeight="Bold" Width="100"/>
                    <TextBox Text="{Binding SelectedTour.DateTime}" Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Comment:" FontWeight="Bold" Width="100"/>
                    <TextBox Text="{Binding SelectedTour.Comment}" Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Difficulty:" FontWeight="Bold" Width="100"/>
                    <TextBox Text="{Binding SelectedTour.Difficulty}" Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Total Distance:" FontWeight="Bold" Width="100"/>
                    <TextBox Text="{Binding SelectedTour.TotalDistance}" Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Total Time:" FontWeight="Bold" Width="100"/>
                    <TextBox Text="{Binding SelectedTour.TotalTime}" Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Rating:" FontWeight="Bold" Width="100"/>
                    <TextBox Text="{Binding SelectedTour.Rating}" Width="200"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>