<UserControl x:Class="SWEN2_TourPlannerGroupProject.Views.UserControls.TourLogsDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWEN2_TourPlannerGroupProject.Views.UserControls"

             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto"
                  MinWidth="100"
                  MinHeight="100"
                  CanContentScroll="True"
                  Padding="10">
        <Grid Margin="0" MinHeight="40" Height="430" Width="753">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" MinWidth="100"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Label Content="Date:" Grid.Row="0" Grid.Column="0" Margin="5"/>
            <DatePicker SelectedDate="{Binding SelectedTourLog.DateTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="1" Margin="5"/>

            <Label Content="Time:" Grid.Row="1" Grid.Column="0" Margin="5"/>
            <TextBox Text="{Binding SelectedTourLog.TotalTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Grid.Row="1" Grid.Column="1" Margin="5" PreviewTextInput="TimeTextBox_PreviewTextInput" LostFocus="TimeTextBox_LostFocus"/>

            <Label Content="Difficulty:" Grid.Row="2" Grid.Column="0" Margin="5"/>
            <!-- Replaced IntegerUpDown with ComboBox for WPF compatibility -->
            <ComboBox SelectedValue="{Binding SelectedTourLog.Difficulty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.Column="1" Margin="5">
                <ComboBox.ItemsSource>
                    <x:Array Type="{x:Type sys:String}" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                        <sys:String>1</sys:String>
                        <sys:String>2</sys:String>
                        <sys:String>3</sys:String>
                        <sys:String>4</sys:String>
                        <sys:String>5</sys:String>
                        <sys:String>6</sys:String>
                        <sys:String>7</sys:String>
                        <sys:String>8</sys:String>
                        <sys:String>9</sys:String>
                        <sys:String>10</sys:String>
                    </x:Array>
                </ComboBox.ItemsSource>
            </ComboBox>

            <Label Content="Distance:" Grid.Row="3" Grid.Column="0" Margin="5"/>
            <TextBox Text="{Binding SelectedTourLog.TotalDistance, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="1" Margin="5" PreviewTextInput="DistanceTextBox_PreviewTextInput" LostFocus="DistanceTextBox_LostFocus"/>

            <Label Content="Comment:" Grid.Row="4" Grid.Column="0" Margin="5"/>
            <TextBox Text="{Binding SelectedTourLog.Comment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="4" Grid.Column="1" Margin="5"/>

            <Label Content="Rating:" Grid.Row="5" Grid.Column="0" Margin="5"/>
            <ComboBox SelectedValue="{Binding SelectedTourLog.Rating, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="5" Grid.Column="1" Margin="5">
                <ComboBox.ItemsSource>
                    <x:Array Type="{x:Type sys:String}" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                        <sys:String>1</sys:String>
                        <sys:String>2</sys:String>
                        <sys:String>3</sys:String>
                        <sys:String>4</sys:String>
                        <sys:String>5</sys:String>
                    </x:Array>
                </ComboBox.ItemsSource>
            </ComboBox>
        </Grid>
    </ScrollViewer>
</UserControl>
