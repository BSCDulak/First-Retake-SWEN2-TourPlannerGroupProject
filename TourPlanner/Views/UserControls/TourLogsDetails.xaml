<UserControl x:Class="SWEN2_TourPlannerGroupProject.Views.UserControls.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWEN2_TourPlannerGroupProject.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" MinWidth="350">
        <Grid Margin="10" MinHeight="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" MinWidth="200"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Label Content="Date:" Grid.Row="0" Grid.Column="0" Margin="5"/>
            <TextBox Text="{Binding SelectedTourLog.DateTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="1" Margin="5"/>

            <Label Content="Time:" Grid.Row="1" Grid.Column="0" Margin="5"/>
            <TextBox Text="{Binding SelectedTourLog.TotalTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1" Margin="5"/>

            <Label Content="Difficulty:" Grid.Row="2" Grid.Column="0" Margin="5"/>
            <TextBox Text="{Binding SelectedTourLog.Difficulty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.Column="1" Margin="5"/>

            <Label Content="Distance:" Grid.Row="3" Grid.Column="0" Margin="5"/>
            <TextBox Text="{Binding SelectedTourLog.TotalDistance, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="1" Margin="5"/>

            <Label Content="Comment:" Grid.Row="4" Grid.Column="0" Margin="5"/>
            <TextBox Text="{Binding SelectedTourLog.Comment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="4" Grid.Column="1" Margin="5"/>

            <Label Content="Rating:" Grid.Row="5" Grid.Column="0" Margin="5"/>
            <TextBox Text="{Binding SelectedTourLog.Rating, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="5" Grid.Column="1" Margin="5"/>
        </Grid>
    </ScrollViewer>
</UserControl>
