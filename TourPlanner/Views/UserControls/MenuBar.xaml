             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWEN2_TourPlannerGroupProject.Views.UserControls"
             mc:Ignorable="d" 

             xmlns:subviews="clr-namespace:SWEN2_TourPlannerGroupProject.Views.Subviews"
             d:DesignHeight="450" d:DesignWidth="800">
    <!-- MenuBar is a user control that contains a menu with three items: File, Edit, and About. 
    This is currently just fluff and does nothing, that's why it has no ViewModel -->
    <Grid>
        <Menu>
            <MenuItem Header="File" FontSize="16">
                <MenuItem Header="Exit"></MenuItem>
            </MenuItem>
            <MenuItem Header="Edit" FontSize="16"></MenuItem>
            <MenuItem Header="About" FontSize="16"></MenuItem>
        </Menu>

        

    </Grid>
</UserControl>
