<UserControl x:Class="SWEN2_TourPlannerGroupProject.Views.Subviews.Tab1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:userControls="clr-namespace:SWEN2_TourPlannerGroupProject.Views.UserControls"
             xmlns:viewModels="clr-namespace:SWEN2_TourPlannerGroupProject.ViewModels"
             xmlns:subviews="clr-namespace:SWEN2_TourPlannerGroupProject.Views.Subviews"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Botones Add / Remove arriba -->
        <userControls:SubTabButtons 
            DataContext="{Binding SubTabButtonsForToursListView}" 
            Grid.ColumnSpan="2" />

        <!-- Lista de Tours a la izquierda -->
        <userControls:ToursList 
            DataContext="{Binding ToursListView}" 
            Grid.Row="1" 
            Grid.Column="0" />

        <!-- Detalle del Tour seleccionado y mapa a la derecha -->
        <Border Grid.Row="1" Grid.Column="1" Padding="10" Background="WhiteSmoke">
            <StackPanel>
                <userControls:TourDetailsWrapPanel 
                    DataContext="{Binding TourDetailsWrapPanelView}" />
                <subviews:OpenRouteServiceMap Height="300" />
               

            </StackPanel>
        </Border>
    </Grid>
</UserControl>



