<UserControl x:Class="SWEN2_TourPlannerGroupProject.Views.Subviews.Tab2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWEN2_TourPlannerGroupProject.Views.Subviews"
             xmlns:userControls="clr-namespace:SWEN2_TourPlannerGroupProject.Views.UserControls"
             xmlns:viewModels="clr-namespace:SWEN2_TourPlannerGroupProject.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            
            <ColumnDefinition Width="4*"/>
           
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

      
        <userControls:SubTabButtons DataContext="{Binding SubTabButtonsViewModel}" Grid.ColumnSpan="2"/>

        
        <userControls:ToursList DataContext="{Binding ToursListViewModel}" Grid.Row="1"/>

        <userControls:TourLogs Grid.Column="1" Grid.RowSpan="2" DataContext="{Binding TourLogsViewModel}" />

    </Grid>
</UserControl>