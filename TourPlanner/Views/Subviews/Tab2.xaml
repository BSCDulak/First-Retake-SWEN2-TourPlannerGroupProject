<UserControl x:Class="SWEN2_TourPlannerGroupProject.Views.Subviews.Tab2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWEN2_TourPlannerGroupProject.Views.Subviews"
             xmlns:userControls="clr-namespace:SWEN2_TourPlannerGroupProject.Views.UserControls"
             xmlns:viewModels="clr-namespace:SWEN2_TourPlannerGroupProject.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="163*"/>

            <ColumnDefinition Width="627*"/>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>

        <userControls:ToursList DataContext="{Binding ToursListView}" Grid.Row="1" Grid.ColumnSpan="3" Margin="0,0,627,0"/>

        <userControls:SubTabButtons  DataContext="{Binding SubTabButtonsForTourLogsView}" Grid.ColumnSpan="3" Margin="0,0,173,0"/>

        <userControls:TourLogs Grid.Row="1" Grid.Column="2" DataContext="{Binding TourLogs}" Margin="0,5,0,-5" Loaded="TourLogs_Loaded" />

    </Grid>
</UserControl>